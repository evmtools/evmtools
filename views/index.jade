extends layout

block content
  body
    .container-fluid
      h3.text-primary.text-center EVM tools
      .row
        .col-xs-6
          .form-group
            label(for='hexcode') Hexcode:
            textarea#hexcode.form-control(rows='3')
            label(for='opcodes') Opcodes:
            .panel.panel-default
            #opcodes.panel-body opcodes Content
        .col-xs-6
          label Source:
          .panel.panel-default
          #source.panel-body Source Content
